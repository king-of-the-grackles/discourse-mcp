{
  "name": "@discourse/mcp",
  "version": "0.1.15",
  "description": "Discourse MCP CLI server (stdio) exposing Discourse tools via MCP",
  "author": "Discourse",
  "license": "MIT",
  "keywords": [
    "discourse",
    "mcp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/discourse/discourse-mcp.git"
  },
  "homepage": "https://github.com/discourse/discourse-mcp#readme",
  "private": false,
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "discourse-mcp": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:stdio": "tsc -p tsconfig.json",
    "build:http": "smithery build",
    "prepublishOnly": "npm run build:stdio",
    "dev": "smithery dev",
    "dev:stdio": "node --enable-source-maps dist/index.js",
    "start:http": "node .smithery/index.cjs",
    "start:stdio": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .smithery",
    "sync:fixtures": "node scripts/sync-fixtures.mjs",
    "test": "node --test dist/test/**/*.js",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:alpha": "standard-version --prerelease alpha",
    "release:beta": "standard-version --prerelease beta"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@smithery/sdk": "^3.0.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@smithery/cli": "^2.2.1",
    "@types/node": "^20.14.10",
    "standard-version": "^9.5.0",
    "typescript": "^5.5.4"
  }
}
